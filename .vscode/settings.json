{
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript", // if you are using typescript
    "typescriptreact": "javascript" // if you are using typescript with react
  },
  "editor.quickSuggestions": {
    "strings": true // forces VS Code to trigger completions when editing "string" content
  },
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)", // tw`...`
    "tw\\.[^`]+`([^`]*)`", // tw.xxx<xxx>`...`
    "tw\\(.*?\\).*?`([^`]*)", // tw(Component)<xxx>`...`
    // use 'customCss={`...tw-clases`}' and 'customCss="...tw-clases"' to add tailwind classes to the completion list
    "customCss={`([^`]*)", // customCss={`...`}
    "customCss=\"([^`]*)" // customCss="..."
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  // Add distinguishing colors to the workspace title bar
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#34333E",
    "titleBar.inactiveForeground": "#34333ECC",
    "titleBar.activeBackground": "#cecbbfcc",
    "titleBar.inactiveBackground": "#aba89dcc"
  }
}
